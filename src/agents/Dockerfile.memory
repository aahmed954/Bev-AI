# Memory Manager Container - Neo4j Graph + Redis Cache + PostgreSQL Persistence
FROM python:3.11-slim

LABEL maintainer="ORACLE1 Memory Systems"
LABEL component="memory-manager"
LABEL version="3.0.0"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    neo4j==5.14.0 \
    redis==5.0.1 \
    psycopg2-binary==2.9.9 \
    sqlalchemy==2.0.23 \
    alembic==1.13.0 \
    sentence-transformers==2.2.2 \
    faiss-cpu==1.7.4 \
    chromadb==0.4.18 \
    pinecone-client==2.2.4 \
    weaviate-client==4.4.1 \
    langchain==0.0.350 \
    langchain-community==0.0.10 \
    tiktoken==0.5.2 \
    numpy==1.24.3 \
    pandas==2.1.4 \
    scipy==1.11.4 \
    networkx==3.2.1 \
    structlog==23.2.0 \
    prometheus-client==0.19.0 \
    tenacity==8.2.3 \
    pydantic==2.5.0

# Copy memory manager code
COPY memory_manager.py /app/
COPY memory_models/ /app/memory_models/
COPY embeddings/ /app/embeddings/

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/embeddings_cache /app/graph_backups

# Expose ports
EXPOSE 8300  # API port
EXPOSE 9300  # Metrics port
EXPOSE 7687  # Neo4j bolt protocol
EXPOSE 6379  # Redis
EXPOSE 5432  # PostgreSQL

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8300/health || exit 1

# Environment variables
ENV MEMORY_BACKEND="hybrid" \
    NEO4J_URI="bolt://neo4j:7687" \
    NEO4J_USER="neo4j" \
    NEO4J_PASSWORD="oracle1memory" \
    REDIS_HOST="redis" \
    REDIS_PORT="6379" \
    POSTGRES_HOST="postgres" \
    POSTGRES_PORT="5432" \
    POSTGRES_DB="memory" \
    POSTGRES_USER="memory_user" \
    RETENTION_DAYS="365" \
    EMBEDDING_MODEL="all-MiniLM-L6-v2" \
    VECTOR_DIM="384" \
    LOG_LEVEL="INFO"

# Run memory manager
CMD ["uvicorn", "memory_manager:app", "--host", "0.0.0.0", "--port", "8300", "--workers", "2"]