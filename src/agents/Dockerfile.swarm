# Swarm Master Container - Democratic & Hierarchical Coordination
FROM python:3.11-slim

LABEL maintainer="ORACLE1 Agent Swarm"
LABEL component="swarm-master"
LABEL version="3.0.0"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    curl \
    supervisor \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    pydantic==2.5.0 \
    aiohttp==3.9.1 \
    asyncio==3.4.3 \
    redis==5.0.1 \
    prometheus-client==0.19.0 \
    structlog==23.2.0 \
    tenacity==8.2.3 \
    networkx==3.2.1 \
    numpy==1.24.3 \
    scipy==1.11.4 \
    kafka-python==2.0.2 \
    aiokafka==0.10.0

# Copy swarm master code
COPY swarm_master.py /app/
COPY config/ /app/config/

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/state

# Expose ports
EXPOSE 8100  # API port
EXPOSE 9100  # Metrics port
EXPOSE 6379  # Redis communication

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8100/health || exit 1

# Environment variables
ENV SWARM_MODE="democratic" \
    MAX_AGENTS="100" \
    CONSENSUS_THRESHOLD="0.75" \
    COORDINATION_ALGORITHM="raft" \
    LOG_LEVEL="INFO"

# Run swarm master
CMD ["uvicorn", "swarm_master:app", "--host", "0.0.0.0", "--port", "8100", "--workers", "4"]