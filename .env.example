# =====================================================
# BEV OSINT Platform Environment Configuration
# =====================================================

# Core Database Configuration
POSTGRES_USER=bev_admin
POSTGRES_PASSWORD=BevSecureDB2024!
POSTGRES_URI=postgresql://bev_admin:BevSecureDB2024!@postgres:5432/osint

# Neo4j Graph Database
NEO4J_USER=neo4j
NEO4J_PASSWORD=BevGraph2024!
NEO4J_URI=bolt://neo4j:7687

# Redis Configuration
REDIS_PASSWORD=BevCache2024!

# RabbitMQ Configuration
RABBITMQ_USER=bev_rabbit
RABBITMQ_PASSWORD=BevRabbit2024!

# InfluxDB Configuration
INFLUXDB_TOKEN=BevMetricsToken2024SecureInfluxDB
INFLUXDB_ORG=bev-osint
INFLUXDB_BUCKET=metrics

# Tor Configuration
TOR_PROXY=socks5://tor:9050
TOR_CONTROL_PASSWORD=BevTorControl2024!

# IntelOwl Configuration
DJANGO_SECRET_KEY=BevDjangoSecretKey2024VeryLongAndSecure
INTELOWL_POSTGRES_HOST=intelowl-postgres
INTELOWL_POSTGRES_DB=intelowl_db
INTELOWL_POSTGRES_USER=intelowl_user
INTELOWL_POSTGRES_PASSWORD=IntelOwlDB2024!
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_DEBUG=False

# Performance Configuration
WORKERS=4
THREADS_PER_WORKER=4
REQUEST_TIMEOUT=300

# External API Keys - Core Services
SHODAN_API_KEY=your_shodan_api_key_here
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
DEHASHED_API_KEY=your_dehashed_api_key_here
DEHASHED_EMAIL=your_dehashed_email_here
SNUSBASE_API_KEY=your_snusbase_api_key_here
WELEAKINFO_API_KEY=your_weleakinfo_api_key_here

# =====================================================
# PHASE 7 - ALTERNATIVE MARKET INTELLIGENCE
# =====================================================

# Blockchain Analysis APIs
BLOCKCHAIN_API_KEYS=blockchair:your_key,blockchain_info:your_key,blockcypher:your_key
CHAINALYSIS_API_KEY=your_chainalysis_api_key_here
ELLIPTIC_API_KEY=your_elliptic_api_key_here

# Economic Data APIs
ECONOMIC_INDICATORS_API=your_economic_indicators_api_key_here

# =====================================================
# PHASE 8 - ADVANCED SECURITY OPERATIONS
# =====================================================

# Threat Intelligence Feeds
THREAT_INTEL_FEEDS=misp:your_misp_url:your_key,alienvault:your_otx_key,threatfox:your_threatfox_key

# Notification and Alert Systems
NOTIFICATION_WEBHOOKS=slack:your_slack_webhook,discord:your_discord_webhook,email:smtp://your_smtp_config

# Operational Compartments
OPERATIONAL_COMPARTMENTS=level1:basic,level2:enhanced,level3:maximum

# =====================================================
# PHASE 9 - AUTONOMOUS ENHANCEMENT
# =====================================================

# Machine Learning and AI Configuration
ML_MODEL_VERSION=v2.1.0
MODEL_REGISTRY_URL=https://your-model-registry.com
EXPERIMENT_TRACKING_URL=https://your-mlflow-instance.com

# Resource Management
DOCKER_HOST=unix:///var/run/docker.sock
KUBERNETES_CONFIG_PATH=/app/config/kubeconfig
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =====================================================
# LOGGING AND MONITORING
# =====================================================

# Log Levels
LOG_LEVEL=INFO
DEBUG_MODE=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=BevGrafana2024!
ALERT_MANAGER_CONFIG=/app/config/alertmanager.yml

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# Encryption Keys
DATA_ENCRYPTION_KEY=BevDataEncryptionKey2024VerySecure32Chars
JWT_SECRET=BevJWTSecret2024ForTokenSigning
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Network Security
ALLOWED_NETWORKS=172.30.0.0/16,127.0.0.1/32
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =====================================================
# DEPLOYMENT CONFIGURATION
# =====================================================

# Environment Type
ENVIRONMENT=development
# Options: development, staging, production

# Resource Limits
MAX_MEMORY_USAGE=32G
MAX_CPU_USAGE=16
MAX_DISK_USAGE=1T

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup

# =====================================================
# FEATURE FLAGS
# =====================================================

# Phase Enablement
PHASE_7_ENABLED=true
PHASE_8_ENABLED=true
PHASE_9_ENABLED=true

# Advanced Features
GPU_ACCELERATION=true
DISTRIBUTED_COMPUTING=true
AUTO_SCALING=true
ADVANCED_ANALYTICS=true

# =====================================================
# INTEGRATION CONFIGURATION
# =====================================================

# External Systems
ELK_STACK_URL=http://elasticsearch:9200
GRAFANA_URL=http://grafana:3000
KIBANA_URL=http://kibana:5601

# Message Queue Topics
KAFKA_TOPICS=dm_data,crypto_analysis,reputation_scores,threat_intel,autonomous_decisions

# =====================================================
# COMPLIANCE AND AUDIT
# =====================================================

# Data Retention
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
PII_ANONYMIZATION=true

# Compliance Standards
GDPR_COMPLIANCE=true
SOC2_COMPLIANCE=true
ISO27001_COMPLIANCE=true

# =====================================================
# DEVELOPMENT AND TESTING
# =====================================================

# Testing Configuration
TESTING_MODE=false
MOCK_EXTERNAL_APIS=false
LOAD_TESTING_ENABLED=false

# Development Tools
HOT_RELOAD=false
DEBUG_PROFILING=false
VERBOSE_LOGGING=false

# =====================================================
# CONTAINER ORCHESTRATION
# =====================================================

# Docker Swarm / Kubernetes
ORCHESTRATOR=docker-swarm
# Options: docker-swarm, kubernetes, nomad

SWARM_MANAGER_TOKEN=your_swarm_manager_token_here
KUBERNETES_NAMESPACE=bev-osint