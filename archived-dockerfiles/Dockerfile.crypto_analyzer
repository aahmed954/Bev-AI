FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/alternative_market/crypto_analyzer.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "crypto_analyzer.py", "--healthcheck"]
CMD ["python", "crypto_analyzer.py"]
EXPOSE 8081
