FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/security/defense_automation.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "defense_automation.py", "--healthcheck"]
CMD ["python", "defense_automation.py"]
EXPOSE 8091
