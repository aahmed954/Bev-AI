FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/autonomous/enhanced_autonomous_controller.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "enhanced_autonomous_controller.py", "--healthcheck"]
CMD ["python", "enhanced_autonomous_controller.py"]
EXPOSE 8100
