{
  "dashboard": {
    "id": null,
    "title": "BEV OSINT - Alert Management Dashboard",
    "tags": ["bev", "alerts", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "Alert Status Overview",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (severity) (bev_active_alerts)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "vis": false,
                "legend": false
              }
            },
            "mappings": [],
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "critical"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "warning"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
            },
            {
              "matcher": {"id": "byName", "options": "info"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "options": {
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {"displayMode": "list", "placement": "right"},
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 2,
        "title": "Alerts by Service",
        "type": "barchart",
        "targets": [
          {
            "expr": "sum by (service) (bev_active_alerts)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "options": {
          "orientation": "horizontal",
          "xField": "service",
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 3,
        "title": "Alert Rate Trends",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(bev_alerts_total[1h]))",
            "legendFormat": "Alerts Last Hour",
            "refId": "A"
          },
          {
            "expr": "sum(increase(bev_alerts_total[24h]))",
            "legendFormat": "Alerts Last 24h",
            "refId": "B"
          },
          {
            "expr": "avg(increase(bev_alerts_total[1h]))",
            "legendFormat": "Hourly Average",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "title": "Active Alerts Detail",
        "type": "table",
        "targets": [
          {
            "expr": "bev_active_alerts > 0",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "severity"},
              "properties": [
                {"id": "custom.displayMode", "value": "color-background"},
                {
                  "id": "mappings",
                  "value": [
                    {
                      "options": {
                        "critical": {"color": "red", "index": 0},
                        "warning": {"color": "orange", "index": 1},
                        "info": {"color": "blue", "index": 2}
                      },
                      "type": "value"
                    }
                  ]
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "displayName", "value": "Count"}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "service": 0,
                "severity": 1,
                "Value": 2
              },
              "renameByName": {
                "service": "Service",
                "severity": "Severity",
                "Value": "Active Count"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Alert Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (severity) (bev_alerts_total)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "critical"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "warning"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "title": "Notification Channels Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (channel) (rate(bev_notifications_sent_total[5m]))",
            "legendFormat": "{{channel}} - Sent",
            "refId": "A"
          },
          {
            "expr": "sum by (channel) (rate(bev_notification_failures_total[5m]))",
            "legendFormat": "{{channel}} - Failed",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "title": "Alert Resolution Time",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(bev_alert_resolution_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(bev_alert_resolution_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(bev_alert_resolution_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 8,
        "title": "Top 10 Most Frequent Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (rule) (bev_alerts_total))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "displayName", "value": "Total Count"},
                {"id": "custom.displayMode", "value": "gradient-gauge"},
                {"id": "min", "value": 0}
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "rule": 0,
                "Value": 1
              },
              "renameByName": {
                "rule": "Alert Rule",
                "Value": "Total Count"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Alert System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"health-monitor\"}",
            "legendFormat": "Health Monitor",
            "refId": "A"
          },
          {
            "expr": "up{job=\"alert-system\"}",
            "legendFormat": "Alert System",
            "refId": "B"
          },
          {
            "expr": "up{job=\"metrics-collector\"}",
            "legendFormat": "Metrics Collector",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {"text": "Down", "color": "red"},
                  "1": {"text": "Up", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "none"
        }
      },
      {
        "id": 10,
        "title": "Escalation Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (level) (bev_alert_escalations_total)",
            "legendFormat": "Level {{level}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "color": {"mode": "palette-classic"}
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40},
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(bev_active_alerts, service)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "options": [],
          "includeAll": true,
          "allValue": ".*",
          "multi": true,
          "refresh": 1
        },
        {
          "name": "severity",
          "type": "custom",
          "options": [
            {"text": "All", "value": "$__all", "selected": true},
            {"text": "Critical", "value": "critical", "selected": false},
            {"text": "Warning", "value": "warning", "selected": false},
            {"text": "Info", "value": "info", "selected": false}
          ],
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        },
        {
          "name": "timerange",
          "type": "interval",
          "options": [
            {"text": "1m", "value": "1m", "selected": false},
            {"text": "5m", "value": "5m", "selected": true},
            {"text": "15m", "value": "15m", "selected": false},
            {"text": "1h", "value": "1h", "selected": false}
          ],
          "current": {
            "selected": true,
            "text": "5m",
            "value": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Alert Storms",
          "enable": true,
          "iconColor": "purple",
          "query": "increase(bev_alerts_total[5m]) > 10",
          "textFormat": "Alert storm detected: {{value}} alerts in 5 minutes",
          "titleFormat": "Alert Storm"
        },
        {
          "name": "System Restarts",
          "enable": true,
          "iconColor": "yellow",
          "query": "resets(bev_service_up[1h]) > 0",
          "textFormat": "Service {{service}} restarted",
          "titleFormat": "Service Restart"
        }
      ]
    }
  }
}