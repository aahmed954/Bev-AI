FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/pipeline/context_compressor.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "context_compressor.py", "--healthcheck"]
CMD ["python", "context_compressor.py"]
EXPOSE 8120