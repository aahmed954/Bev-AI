FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/infrastructure/predictive_cache.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "predictive_cache.py", "--healthcheck"]
CMD ["python", "predictive_cache.py"]
EXPOSE 8150