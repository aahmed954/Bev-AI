# MinIO Cluster Environment Configuration

# Root credentials
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123456

# Cluster configuration
MINIO_DISTRIBUTED_MODE_ENABLED=yes
MINIO_ERASURE_SET_DRIVE_COUNT=3

# Network configuration
COMPOSE_PROJECT_NAME=oracle1-minio
MINIO_CLUSTER_SUBNET=172.20.0.0/16

# Performance settings
MINIO_API_REQUESTS_MAX=10000
MINIO_API_REQUESTS_DEADLINE=10s
MINIO_CACHE_QUOTA=80

# Monitoring
PROMETHEUS_RETENTION=30d
GRAFANA_ADMIN_PASSWORD=admin123

# Security settings (set to true for production)
MINIO_API_SECURE=false
MINIO_TLS_ENABLED=false

# Resource limits
MINIO_MEMORY_LIMIT=4G
MINIO_CPU_LIMIT=2.0