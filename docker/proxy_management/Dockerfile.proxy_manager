FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/infrastructure/proxy_manager.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "proxy_manager.py", "--healthcheck"]
CMD ["python", "proxy_manager.py"]
EXPOSE 8160