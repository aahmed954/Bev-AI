FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/edge/edge_node_manager.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "edge_node_manager.py", "--healthcheck"]
CMD ["python", "edge_node_manager.py"]
EXPOSE 8131