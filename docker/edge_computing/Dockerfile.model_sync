FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/edge/model_synchronizer.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "model_synchronizer.py", "--healthcheck"]
CMD ["python", "model_synchronizer.py"]
EXPOSE 8133