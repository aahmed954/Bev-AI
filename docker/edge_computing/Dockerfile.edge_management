FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/edge/edge_management_service.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "edge_management_service.py", "--healthcheck"]
CMD ["python", "edge_management_service.py"]
EXPOSE 8130