FROM python:3.11-slim
LABEL maintainer="BEV DevOps"
WORKDIR /app
COPY src/infrastructure/request_multiplexer.py ./
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
ENV PYTHONUNBUFFERED=1
HEALTHCHECK CMD ["python", "request_multiplexer.py", "--healthcheck"]
CMD ["python", "request_multiplexer.py"]
EXPOSE 8170