{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BEV OSINT Framework",
  "version": "0.1.0",
  "identifier": "com.bev.osint",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BEV OSINT Framework",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "fileDropEnabled": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://localhost; connect-src 'self' http://localhost:3010 http://localhost:9150 ws://localhost:*",
      "freezePrototype": true,
      "dangerousRemoteDomainIpcAccess": [],
      "dangerousDisableAssetCspModification": false,
      "assetProtocol": {
        "enable": true,
        "scope": []
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": false,
      "scope": []
    }
  }
}