# AI Companion Standalone Environment Configuration
# Copy to .env and customize for your deployment

# ================================================================
# CORE CONFIGURATION
# ================================================================

# Companion Identity
COMPANION_NAME="AI Companion"
COMPANION_VERSION="2.0.0"
COMPANION_MODE=standalone

# Database Credentials
COMPANION_POSTGRES_PASSWORD=companion_secure_pass_2024
COMPANION_SECRET_KEY=companion_ultra_secure_key_2024
COMPANION_ENCRYPTION_KEY=companion_encryption_key_2024

# Grafana Dashboard
COMPANION_GRAFANA_PASSWORD=companion_admin_2024

# ================================================================
# PERFORMANCE CONFIGURATION
# ================================================================

# GPU Settings
GPU_MEMORY_FRACTION=0.8
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Resource Limits
MAX_CONCURRENT_SESSIONS=10
MEMORY_LIMIT_GB=8
COMPANION_PERFORMANCE_MODE=optimized

# ================================================================
# INTEGRATION CONFIGURATION
# ================================================================

# Core Platform Integration (Optional)
CORE_PLATFORM_ENABLED=false
COMPANION_GATEWAY_MODE=standalone

# Core Platform Hosts
THANOS_HOST=172.21.0.10
ORACLE1_HOST=172.21.0.20
OSINT_API_ENDPOINT=

# Integration Settings
CORE_PLATFORM_AUTO_DETECT=true
INTEGRATION_TIMEOUT=5
STANDALONE_FALLBACK=true

# ================================================================
# FEATURE FLAGS
# ================================================================

# AI Capabilities
VOICE_SYNTHESIS_ENABLED=true
AVATAR_RENDERING_ENABLED=true
EMOTIONAL_INTELLIGENCE_ENABLED=true
AUTONOMOUS_RESEARCH_ENABLED=true

# Real-time Features
REAL_TIME_RESPONSE=true
REAL_TIME_RENDERING=true
EMOTION_SYNC_ENABLED=true

# Advanced Features
PHYSICS_SIMULATION=true
FACIAL_TRACKING=true
PREDICTIVE_CACHING=true

# ================================================================
# SERVICE CONFIGURATION
# ================================================================

# Voice Synthesis
VOICE_ENGINE=tortoise-tts
VOICE_QUALITY=high
VOICE_CACHE_SIZE=1000
EMOTION_SYNTHESIS_ENABLED=true

# Avatar Rendering
AVATAR_ENGINE=live2d
AVATAR_QUALITY=ultra

# Memory Management
MEMORY_RETENTION_DAYS=365
CONTEXT_WINDOW_SIZE=32000
SEMANTIC_SEARCH_ENABLED=true
PRIVACY_MODE=strict

# ================================================================
# MONITORING CONFIGURATION
# ================================================================

# Health Monitoring
HEALTH_CHECK_INTERVAL=30
MONITOR_INTERVAL=10
AUTO_SCALE_ENABLED=true

# Resource Thresholds
GPU_TEMP_THRESHOLD=83
GPU_MEMORY_THRESHOLD=90
SYSTEM_MEMORY_THRESHOLD=85

# Alerting
ALERT_ENABLED=true
SCALE_DOWN_IDLE_TIME=300
SCALE_UP_THRESHOLD=80

# ================================================================
# LOGGING CONFIGURATION
# ================================================================

# Log Levels
COMPANION_LOG_LEVEL=INFO
COMPANION_DEBUG_MODE=false

# Log Management
COMPANION_LOG_RETENTION_DAYS=30
LOG_COMPRESSION=true

# ================================================================
# SECURITY CONFIGURATION
# ================================================================

# Network Security
COMPANION_NETWORK_SUBNET=172.30.0.0/16
COMPANION_GATEWAY_IP=172.30.0.1

# Data Protection
DATA_ENCRYPTION_ENABLED=true
SECURE_MEMORY_CLEARING=true

# ================================================================
# DEVELOPMENT CONFIGURATION
# ================================================================

# Development Mode (set to true for development)
COMPANION_DEV_MODE=false
COMPANION_DEBUG_API=false
COMPANION_MOCK_GPU=false

# Development Overrides
DEV_SKIP_GPU_CHECK=false
DEV_ENABLE_CORS=false
DEV_DISABLE_AUTH=false